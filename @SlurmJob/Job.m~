classdef Job < handle
    % SlurmManager Class for managing Slurm jobs within MATLAB.
    %   Detailed explanation goes here
    properties
        
        slurm=struct;
        passWorkspace=false;        
        workDir;
        keepWorkDir=false;
        handle=@disp;
        data=['Error: No data;'];
        
    end
    
    properties (Access = protected)
        state='UNKNOWN';
        mlmString="error('no matlab command given')";
        submitString='echo "something is wrong"';
    end
   
    methods
        add(jobject,key,value);
        testsubmit(jobject);
        submit(jobject);
        % Constructor
        function obj=Job()          
            obj.workDir=['.', tempname];
            obj.add('output', [obj.workDir,'/s']);
            mkdir(obj.workDir)
        end
    end
    
    methods (Access = protected)
        presubmit(jobject);
    end
end

